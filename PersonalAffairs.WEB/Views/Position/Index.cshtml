@model IEnumerable<PersonalAffairs.WEB.Models.PositionViewModel>
@{
    ViewBag.Title = "Index";
}

<style>
    table tr td div {
        display:none;
    }
    table tr:nth-child(-n+6) div {
        display:block;
    }

    table tr:first-child {
        background-color: white;
    }
    .dot{
        height:25px;
        width:25px;
        border-radius:50%;
        background-color:yellow;
    }
</style>
<br />
<h1>Positions</h1>
<br />
<a class="btn btn-light" href="/Position/AddPosition/">Add position</a>
<br />
<br />

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkingHours)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="dot"></div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingHours)
            </td>
            <td>
                <a class="btn btn-light" href="/Position/EditPosition/@item.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-light" href="/Position/InfoPosition/@item.Id">Info</a>
            </td>
            <td>
                <a class="btn btn-light" href="/Position/DeletePosition/@item.Id">Delete</a>
            </td>
        </tr>
    }

</table>