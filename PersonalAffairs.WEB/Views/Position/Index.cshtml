@model IEnumerable<PersonalAffairs.BLL.DTO.PositionDTO>
@{
    ViewBag.Title = "Index";
}

<style>
    table tr:nth-child(-n+6){
        background-color:azure;
    }
    table tr:first-child{
        background-color:white;
    }
</style>
<br />
<h2>Positions(Top 5 position highlighted by color:)</h2>

<br />
@Html.ActionLink("Add Position", "AddPosition", "Position")


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkingHours)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkingHours)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPosition", "Position", new { id = item.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Info", "InfoPosition", "Position", new { id = item.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeletePosition", "Position", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>