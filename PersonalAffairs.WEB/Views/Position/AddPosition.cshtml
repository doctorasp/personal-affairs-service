@model PersonalAffairs.WEB.Models.WorkerViewModel
@{
    ViewBag.Title = "AddWorker";
}

<br />
<h2 class="alert alert-info">Add Position</h2>
@using (Html.BeginForm("AddPosition", "Position", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-2">
            <label>
                Name
            </label>
        </div>
        <div class="col-md-10">
            <input type="text" class="form-control" name="Name"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <label>
                Price
            </label>
        </div>
        <div class="col-md-10">
            <input type="number" class="form-control" rows="1" name="Price"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <label>
                WorkingHours
            </label>
        </div>
        <div class="col-md-10">
            <input type="number" class="form-control" rows="1" name="WorkingHours"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-10 col-md-1">
            <input type="submit" value="Додати" class="btn btn-success" />
        </div>
    </div>
</div>
}